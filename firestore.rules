rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
      
      // Notifications subcollection - users can read their own, organizers can send to attendees
      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow create: if isSignedIn(); // Allow any authenticated user to create notifications
        allow update, delete: if isOwner(userId);
      }
      
      // FCM Tokens subcollection - users can only access their own tokens
      match /fcmTokens/{tokenId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }
    
    // Events collection - public read, authenticated write for organizers
    match /events/{eventId} {
      allow read: if true; // Public events are readable by everyone
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.organizer_id == request.auth.uid ||
        // Allow updating only tickets_sold field for ticket purchases
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['tickets_sold']) &&
         request.resource.data.tickets_sold > resource.data.tickets_sold)
      );
      allow delete: if isSignedIn() && resource.data.organizer_id == request.auth.uid;
      
      // Event updates subcollection
      match /updates/{updateId} {
        allow read: if true; // Anyone can read event updates
        allow write: if isSignedIn() && (
          exists(/databases/$(database)/documents/events/$(eventId)) &&
          get(/databases/$(database)/documents/events/$(eventId)).data.organizer_id == request.auth.uid
        );
      }
    }
    
    // Event updates collection (separate from events subcollection)
    match /event_updates/{updateId} {
      allow read: if true; // Anyone can read event updates
      allow create: if isSignedIn(); // Any authenticated user can create
      allow update, delete: if isSignedIn();
    }
    
    // Tickets collection - users can access their own tickets, organizers can access all tickets
    match /tickets/{ticketId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }
    
    // Ticket tiers - public read, organizers can manage their event's tiers
    match /ticket_tiers/{tierId} {
      allow read: if true; // Public read for event browsing
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && get(/databases/$(database)/documents/events/$(resource.data.event_id)).data.organizer_id == request.auth.uid;
    }
    
    // Group discounts - public read, organizers can manage their event's discounts
    match /group_discounts/{discountId} {
      allow read: if true; // Public read for event browsing
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && get(/databases/$(database)/documents/events/$(resource.data.event_id)).data.organizer_id == request.auth.uid;
    }
    
    // Promo codes - organizers can manage their event's promo codes
    match /promo_codes/{promoCodeId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && get(/databases/$(database)/documents/events/$(resource.data.event_id)).data.organizer_id == request.auth.uid;
    }
    
    // Favorites - users can only access their own favorites
    match /favorites/{favoriteId} {
      allow read, write: if isSignedIn() && resource.data.user_id == request.auth.uid;
    }
    
    // Event Favorites - users can read their own favorites and create new ones
    match /event_favorites/{favoriteId} {
      allow read: if isSignedIn() && resource.data.user_id == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.user_id == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.user_id == request.auth.uid;
    }
    
    // Reviews - authenticated users can create, authors can update/delete
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.user_id == request.auth.uid;
    }
    
    // Verification requests - organizers can read/write their own
    // Admins need to check server-side, client reads limited to own requests
    match /verification_requests/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Only allow deletion server-side via Admin SDK
    }
    
    // Organizers collection - organizers can read/write their own data
    match /organizers/{organizerId} {
      allow read: if isSignedIn();
      allow write: if isOwner(organizerId);
      
      // Payout config subcollection
      match /payoutConfig/{configId} {
        allow read: if isOwner(organizerId);
        allow write: if isOwner(organizerId);
      }
      
      // Verification documents subcollection
      match /verificationDocuments/{docId} {
        allow read: if isOwner(organizerId);
        allow write: if isOwner(organizerId);
      }
    }
    
    // Organizer followers - users can read all, authenticated users can follow/unfollow
    match /organizer_followers/{followId} {
      allow read: if true; // Anyone can see follower counts
      allow create: if isSignedIn() && request.resource.data.follower_id == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.follower_id == request.auth.uid;
    }
    
    // Organizer follows - users can read all, authenticated users can follow/unfollow
    match /organizer_follows/{followId} {
      allow read: if true; // Anyone can see follower counts
      allow create: if isSignedIn() && request.resource.data.follower_id == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.follower_id == request.auth.uid;
    }
    
    // Admin actions log - read-only for admins (writes via server)
    match /admin_actions/{actionId} {
      allow read: if false; // Admin reads via server SDK only
      allow write: if false; // Only server-side writes
    }
    
    // Ticket transfers collection
    match /ticket_transfers/{transferId} {
      allow read: if isSignedIn() && (
        resource.data.from_user_id == request.auth.uid ||
        resource.data.to_email == request.auth.token.email
      );
      allow create: if isSignedIn() && request.resource.data.from_user_id == request.auth.uid;
      allow update: if isSignedIn() && (
        resource.data.from_user_id == request.auth.uid ||
        resource.data.to_email == request.auth.token.email
      );
    }
    
    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
