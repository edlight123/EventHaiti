# Firebase Configuration
# Get from: Firebase Console → Project Settings → General
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side only)
# Get from: Firebase Console → Project Settings → Service Accounts → Generate new private key
# Copy the entire JSON content as a single line string
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"..."}'

# Web Push (VAPID)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Push route protection (optional but recommended)
PUSH_TEST_SECRET=your_random_push_test_secret

# Demo Mode (set to 'true' to enable demo mode with fake data)
NEXT_PUBLIC_DEMO_MODE=false

# Stripe Payment Integration
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Notifications (Resend)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key

# Admin Configuration
# Comma-separated list of admin email addresses for verification management
ADMIN_EMAILS=admin@eventhaiti.com,your-email@example.com
ADMIN_EMAIL=admin@eventhaiti.com

# WhatsApp Notifications (Twilio)
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# MonCash Payment Integration (Haiti)
# Get from: https://moncashbutton.digicelgroup.com
MONCASH_CLIENT_ID=your_moncash_client_id
MONCASH_SECRET_KEY=your_moncash_secret_key
MONCASH_MODE=sandbox # or 'production'

# Cron Job Security
# Generate a random secret for securing cron endpoints
CRON_SECRET=your_random_secret_key_here

# App URL (Required for redirects and webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Apple Wallet Pass (Optional)
# Get from: https://developer.apple.com
APPLE_TEAM_ID=your_apple_team_id
APPLE_PASS_TYPE_ID=pass.com.eventhaiti.ticket
APPLE_WALLET_KEY_PASSPHRASE=your_certificate_passphrase

# Google Wallet (Optional)
# Get from: https://console.cloud.google.com
GOOGLE_WALLET_ISSUER_ID=your_google_wallet_issuer_id
